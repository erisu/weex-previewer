#!/usr/bin/env node

const fs = require('fs');
const yargs = require('yargs');
const chalk = require('chalk');
const preview = require('../build/index');

let commandName = 'weex-previewer';

if (yargs.argv['$0'] === 'weex') {
  commandName = 'weex';
}

const userinfo = '\nUsage: ' + commandName + ' <foo/bar/we_file_or_dir_path>  [options]';
const argv = yargs
  .usage(userinfo)
  .option('port', {
    demand: false
  })
  .default('port', 8081)
  .describe('port', 'http listening port number ,default is 8081')
  .option('wsport', {
    demand: false
  })
  .default('wsport', 8082)
  .describe('wsport', 'websocket listening port number ,default is 8082')
  .describe('entry', 'the entry file in a folder')
  .epilog('Usage:' + commandName + ' demo/index.vue --port 8087')
  .argv;


const inputPath = argv._[0];
let badWePath = !!(!inputPath || (inputPath.length < 2));
try {
  fs.accessSync(inputPath, fs.F_OK);
} catch (e) {
  badWePath = true;
}
if (badWePath) {
  console.log(chalk.red('File not found!'));
  yargs.showHelp();
  process.exit(1);
}

preview(argv);
